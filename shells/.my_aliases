alias v="vim"
alias c="clear"
alias q="exit"
alias g="git"

if [ `echo $TERM` != "cygwin" ];
then
    alias tmux="TERM=xterm-256color tmux"
fi

alias d="docker"
alias ds='docker stop $(docker ps -q)'
alias dr='docker rm $(docker ps -aq)'

alias ls="ls --color=auto --group-directories-first"
alias ll="ls -AlF --group-directories-first"

alias xclip="xclip -sel clip"
alias open="gnome-open"

alias ..="cd .."
alias ...="cd ../.."

alias co="composer.phar"
alias cdu="composer.phar dump-autoload"
alias cri="composer.phar require --ignore-platform-reqs"

alias phpd="php -dxdebug.remote_autostart"

alias a="php artisan"
alias a:mc="php artisan make:controller"
alias a:mcr="php artisan make:controller --resource"
alias a:mr="php artisan make:request"
alias a:mmo="php artisan make:model"
alias a:mmi="php artisan make:middleware"
alias a:ms="php artisan make:seeder"
alias a:mi="php artisan migrate"
alias a:mis="php artisan migrate --seed"
alias a:mir="php artisan migrate:refresh"
alias a:mirs="php artisan migrate:refresh --seed"
alias a:ih:m="php artisan ide-helper:models -W"

